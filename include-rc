DIR="${0:a:h}"
[ -z "$DIR" ] && DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null && pwd )"

if [[ -f $DIR/aliases ]]; then
    . $DIR/aliases
fi

if [[ -f $DIR/envvars ]]; then
    . $DIR/envvars
fi

PATH="$DIR/:$PATH"

if [ -d $HOME/bin ]; then
   PATH="$HOME/bin:$PATH"
fi
  

mcd ()
{
    mkdir -p -- "$1" &&
      cd -P -- "$1"
}

source $DIR/z.sh
